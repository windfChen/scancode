<!--pages/scan/scan.wxml-->
<view class='content'>
  <view class='code-box'>
    <view class="code {{currentIndex == index? 'currentCode': ''}}" 
        data-index="{{index}}" 
        bindtap='choose' 
        wx:for="{{codeList}}" 
        wx:key="{{index}}">
      <text>{{item}}</text>
      <image src="./images/close.png" bindtap='del' data-index="{{index}}" ></image>
    </view>
  </view>

  <view class='btn-box'>
    <button class='btn copy-btn' bindtap="copy">复制</button>
    <button class='btn scan-btn' bindtap="scan">扫码</button>
  </view>
</view>
